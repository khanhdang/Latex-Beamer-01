    \uncover<#4>{
        \begin{tikzpicture}[overlay,remember picture]
        \pgftransformshift{\pgfpointanchor{current page}{center}}
        \node[
        draw=lolit,
        rounded corners,
        thick,
        fill=offwhite,
        drop shadow,
        text width=0.5\textwidth
        ] at (#2,#3) { {#1}};
        \end{tikzpicture}
    }
    
}
